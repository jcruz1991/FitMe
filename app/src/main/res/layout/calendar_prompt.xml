<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:text="Create Workout"
        android:layout_marginTop="55dp"
        android:id="@+id/btnCreate"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Rest Day"
        android:layout_marginTop="113dp"
        android:id="@+id/btnRest"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_below="@+id/btnCreate"
        android:layout_alignStart="@+id/btnCreate" />

    <Button
        android:text="Saved Workout"
        android:id="@+id/btnCopy"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/btnCreate"
        android:layout_alignStart="@+id/btnRest" />

</RelativeLayout>