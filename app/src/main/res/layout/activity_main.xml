<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fitme.fitme.MainActivity">


    <TextView
        android:id="@+id/userTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="clip_horizontal"
        android:text="In Main Activity"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/findBuddyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userTextView"
        android:text="Find Buddy"
        android:gravity="center"
        android:onClick="findBuddyButtonClicked"/>
    <Button
        android:id="@+id/workoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Workout(s)"
        android:gravity="center"
        android:onClick="workoutButtonClicked"
        android:layout_below="@+id/btnWorkout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp" />

    <Button
        android:id="@+id/signOutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/findBuddyButton"
        android:text="Sign Out"
        android:gravity="center"
        android:onClick="signOutButtonClicked"/>

    <Button
        android:id="@+id/btnWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/signOutButton"
        android:layout_marginTop="18dp"
        android:text="Create"
        android:onClick="CreateButtonClicked"/>

    <Button
        android:id="@+id/btnadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/findBuddyButton"
        android:layout_below="@+id/workoutButton"
        android:layout_marginTop="47dp"
        android:text="Add"
        android:onClick="addButtonClicked"/>

    <Button
        android:id="@+id/btnShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnadd"
        android:layout_below="@+id/btnadd"
        android:layout_marginTop="28dp"
        android:text="Display Workout"
        android:onClick="ShowWorkoutButtonClicked"/>

</RelativeLayout>
