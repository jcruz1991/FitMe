<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fitme.fitme.FindBuddyActivity">

    <TextView
        android:id="@+id/activeUserTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="User"
        android:gravity="center"/>
    <Button
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/activeUserTextView"
        android:text="Search For Workout Buddy"
        android:onClick="searchButtonClicked"/>

    <Button
        android:id="@+id/removeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/activeUserTextView"
        android:text="Remove Location"
        android:onClick="removeLocationClicked"/>

    <ListView
        android:id="@+id/workoutL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/removeButton"
        android:visibility="visible"></ListView>

    <ListView
        android:id="@+id/localUsers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/removeButton"
        android:visibility="invisible"></ListView>



</RelativeLayout>
