<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.fitme.fitme">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".FindBuddyActivity"></activity>
        <activity android:name=".chat.ChatActivity"></activity>
        <activity android:name=".AddWorkout"></activity>
        <activity android:name=".workout.Calendar"></activity>
        <activity android:name=".workout.WorkoutActivity"></activity>
        <activity android:name=".workout.DisplayExercisesActivity"></activity>
        <activity android:name=".workout.BodyTypeActivity"></activity>
        <activity android:name=".showworkout"></activity>
        <activity android:name=".workout.Choose_Workout"></activity>
        <activity android:name=".workout.DisplayWorkout"></activity>
        <activity android:name=".workout.WorkOutDesc"></activity>
        <activity android:name=".ShowUserActivity"></activity>
    </application>

</manifest>